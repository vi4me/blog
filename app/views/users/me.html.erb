<h1>My Profile</h1>
<%= image_tag @user.avatar.url(:medium) %>

<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>
  <%= f.submit 'Save', class: 'btn btn-default' %>
<% end %>
<%= link_to 'Back', articles_path %>